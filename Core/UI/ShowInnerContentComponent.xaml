<UserControl x:Class="NewCryptoApp.Core.UI.ShowInnerContentComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewCryptoApp.Core.UI"
             Name="showInnerContentComponent"
             mc:Ignorable="d">
    <Border  Margin="5" BorderBrush="Bisque" Background="#fffdd0" BorderThickness="2" CornerRadius="10" >
        <ContentPresenter Content="{Binding AdditionalContent, ElementName=showInnerContentComponent}" />
    </Border>

</UserControl>
