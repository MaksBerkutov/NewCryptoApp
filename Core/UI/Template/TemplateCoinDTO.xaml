<UserControl x:Class="NewCryptoApp.Core.UI.Template.TemplateCoinDTO"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewCryptoApp.Core.UI.Template"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel    Orientation="Horizontal">
        <Image Source="{Binding Image}" Height="50px"  Margin=" 5 5 20 5"/>

        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal"  >
                <TextBlock Text="{Binding Name}" HorizontalAlignment="Left" Margin=" 5 5 5 5"/>
                <TextBlock Text="{Binding LastUpdate}"  HorizontalAlignment="Right" Margin=" 5 5 5 5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  >
                <TextBlock Text="{Binding Id}" Margin=" 5 5 5 5"/>
                <TextBlock Text="{Binding Symbol}" HorizontalAlignment="Left"  Margin=" 5 5 5 5"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
