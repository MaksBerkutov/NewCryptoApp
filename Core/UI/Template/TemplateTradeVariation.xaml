<UserControl x:Class="NewCryptoApp.Core.UI.Template.TemplateTradeVariation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewCryptoApp.Core.UI.Template"
             Name="templateTradeVariation"
             mc:Ignorable="d">
    <StackPanel  HorizontalAlignment="Center"  >
        <Label Content="{Binding MarketName, ElementName=templateTradeVariation}" HorizontalAlignment="Center"  />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Label Content="{Binding Base}" />
            <Label Content="{DynamicResource To}" />
            <Label Content="{Binding Target}" />
        </StackPanel>
    </StackPanel>
</UserControl>
