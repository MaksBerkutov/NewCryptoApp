<UserControl x:Class="NewCryptoApp.Core.UI.ShowPropertyCompnonet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewCryptoApp.Core.UI"
             Name="showPropertyCompnonet"
             mc:Ignorable="d">
    <Border  Margin="5" BorderBrush="Bisque" BorderThickness="2" CornerRadius="10">
        <WrapPanel Orientation="Horizontal">
            <Label Content="{Binding PropName , ElementName=showPropertyCompnonet}"/>
            <Label Content="{Binding Value, ElementName=showPropertyCompnonet}"/>
        </WrapPanel>
    </Border>
</UserControl>
